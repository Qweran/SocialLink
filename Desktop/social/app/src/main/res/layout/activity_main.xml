<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/Frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent">


        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@color/design_default_color_primary_dark">

        </ImageView>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ic_launcher_round"></ImageView>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ss"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Frame"
       >

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Имя:">

        </TextView>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Возраст:">

        </TextView>

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Специализация">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/s"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ss"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        >

        <TextView
            android:id="@+id/e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Фото:"
            android:textSize="18sp"
            android:layout_gravity="center"
            >

        </TextView>

        <TextView
            android:id="@+id/e2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Проекты:"
            android:textSize="18sp"
            android:layout_gravity="center"
            >

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Достижения:"
            android:textSize="18sp"
            android:layout_gravity="center">

        </TextView>

    </LinearLayout>
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/s"
        android:columnCount="3"

    >
        <ImageView android:id="@+id/sw"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:src="@drawable/poc"
            >

        </ImageView>
        <ImageView android:id="@+id/sw1"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:src="@drawable/poc"
            ></ImageView>
        <ImageView android:id="@+id/sw2"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:src="@drawable/poc"
            ></ImageView>
        <ImageView android:id="@+id/sw3"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:src="@drawable/poc"
            ></ImageView>
        <ImageView android:id="@+id/sw4"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:src="@drawable/poc"
            ></ImageView>
        <ImageView android:id="@+id/sw5"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:src="@drawable/poc"
            ></ImageView>
    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>




