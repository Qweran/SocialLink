<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_spacing">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="370dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/plet12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="250dp"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="250dp" />

        <TextView
            android:id="@+id/connn"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="Москва полна очарования в любое время года. Однако некоторые ее уголки становятся особенно неотразимыми в огнях декоративной подсветки. Представляем список самых живописных «ночных» мест столицы, который будет полезен не только фотографам-любителям."
            tools:layout_editor_absoluteX="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="185dp"
            android:layout_marginStart="33dp"
            tools:layout_editor_absoluteY="185dp" />

        <ImageButton
            android:id="@+id/menu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_more_vert_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="350dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/description_post_menu" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="320dp"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="130dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 часа назад"
            android:textColor="#BABABA"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="150dp"
            android:layout_marginStart="80dp"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="130dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Плетнев Даниил"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="130dp"
            android:layout_marginStart="80dp"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="130dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="529dp"
            android:layout_marginEnd="315dp"
            android:src="@drawable/heart"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="530dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/repost"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="529dp"
            android:layout_marginEnd="80dp"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="530dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="529dp"
            android:layout_marginStart="250dp"
            tools:layout_editor_absoluteX="320dp"
            tools:layout_editor_absoluteY="530dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="112"
            android:layout_marginEnd="250dp"
            android:layout_marginTop="535dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="535dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="535dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="535dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2k"
            android:layout_marginTop="535dp"
            android:layout_marginStart="320dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteX="360dp"
            tools:layout_editor_absoluteY="535dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
